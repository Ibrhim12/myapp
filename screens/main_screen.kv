<MainScreen>:
    RelativeLayout:
        canvas.before:
            Rectangle:
                source: 'assets/ck.png'
                size: self.size
                pos: self.pos

        Image:
            source: 'assets/icon.png'
            size_hint: None, None
            size: 120, 120
            pos_hint: {'x': 0.05, 'top': 0.96}

        Label:
            text: 'EZI Phishing Detection'
            bold: True
            font_size: '28sp'
            color: 0.93, 0.93, 0.93, 1  # Corrected RGBA color
            size_hint: None, None
            height: 60
            pos_hint: {'center_x': 0.5, 'top': 0.80}  # Label positioned at the top

        Label:
            text: 'Â©2024 EZI Phishing Detection. All rights reserved.'
            font_size: 16
            size_hint: 1, 0.05
            color: 1, 1, 1, 1
            pos_hint: {'x': 0, 'y': 0}

        GridLayout:
            cols: 1
            spacing: 20
            size_hint: 0.4, 0.3
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                text: 'Detect URL'
                size_hint_y: None
                height: 60
                background_color: 0.298, 0.686, 0.314, 1  # Green color for button
                on_press: root.manager.current = 'detect_url'

            Button:
                text: 'Detect Text'
                size_hint_y: None
                height: 60
                background_color: 0.129, 0.588, 0.953, 1  # Blue color for button
                on_press: root.manager.current = 'detect_text'

            Button:
                text: 'Web-Based Detection'
                size_hint_y: None
                height: 60
                background_color: 0.992, 0.0, 0.0, 1  # Red color for button
                on_press: root.manager.current = 'realtime_detection'

            
